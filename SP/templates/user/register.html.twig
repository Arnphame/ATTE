{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
<div class="container-fluid reg">
    <div class="text-left col-md-5 col-md-offset-3">
        {{ form_start(form) }}
            {% if not form.vars.valid %}
            <div class="alert">
            {{ form_errors(form.username) }}
            {{ form_errors(form.email) }}
            {{ form_errors(form.password.first) }}
                <br>
                 <p>Click on the "x" symbol to close the alert message.</p>
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            </div>
            {% endif %}
        <br>
            <br>
            <span style="color: #FFF;">Username</span>  {{ form_widget(form.username) }}
            <span style="color: #FFF;">Email</span> {{ form_widget(form.email) }}
            <span style="color: #FFF;">Password</span>{{ form_widget(form.password.first) }}
            <span style="color: #FFF;">Repeat password</span> {{ form_widget(form.password.second) }}
            <span style="color: #FFF;">Address</span> {{ form_widget(form.address) }}
            <span style="color: #FFF;">Phone Number</span> {{ form_widget(form.phoneNumber) }}

            <button type="submit" class="btn btn-primary btn-raised">Register</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
