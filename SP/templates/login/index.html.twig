{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}

{% block body %}
    <div class="container-fluid logzz">
        <div class="text-left col-md-5 col-md-offset-3">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="username" class="bmd-label-floating">Username:</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                    <span class="bmd-help">Please enter your username</span>
                </div>
                
                <div class="form-group">
                    <label for="password" class="bmd-label-floating">Password:</label>
                    <input type="password" class="form-control" id="password" name="_password" />
                    <span class="bmd-help">Please enter your password</span>
                </div>

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <button type="submit" class="btn btn-primary btn-raised">Login</button>

            </form>
        </div>
    </div>
{% endblock %}
