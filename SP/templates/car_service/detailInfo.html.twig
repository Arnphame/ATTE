{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}


{% block body %}
        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>

        <div class="main">
            {% if error is defined and error is not empty %}
                <div>  {{ error }} </div>
            {% endif %}
            {% if success is defined and success is not empty %}
                <div>  {{ success }} </div>
            {% endif %}
            <table id="services">
                <tr> <th>Service registration time</th> <th>{{ carService.firstTime|date('Y-m-d H:i:s') }}</th></tr>
                <tr> <th>Status</th> <th>{{ carService.status }}</th></tr>
                <tr> <th>Car</th> <th> {{ carService.rulerCar }}</th>  </tr>
                <tr> <th>Make</th> <th> {{ carService.rulerCar.make }}</th>  </tr>
                <tr> <th>Model</th> <th> {{ carService.rulerCar.model }}</th>  </tr>
                <tr> <th>Year</th> <th> {{ carService.rulerCar.year|date('Y-m') }}</th>  </tr>
                <tr> <th>User</th> <th>{{ carService.rulerUser }}</th></tr>
                <tr> <th>Service</th> <th>{{ carService.rulerService }}</th></tr>
                
                <tr> <th>Last status change time</th> <th>{{ carService.lastChangeTime|date('Y-m-d H:i:s') }}</th></tr>
                {% if mechanic != null %}
                <tr> <th>Mechanic</th> <th>{{ mechanic }}</th></tr>
                <tr> <th>Phone number of mechanic</th> <th>{{ mechanic.phoneNumber }}</th></tr>
                <tr> <th>Email of mechanic</th> <th>{{ mechanic.email }}</th></tr>
                {% endif %}


            </table>
        </div>

{% endblock %}
